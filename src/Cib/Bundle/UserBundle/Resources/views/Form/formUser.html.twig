{% form_theme form 'form_table_layout.html.twig' %}

<br>
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-xs-offset-3 col-xs-5 col-md-5">
            <table class="table table-responsive">
                <tr class="titleTable">
                    <td class="col-xs-1 col-md-1">UTILISATEUR</td>
                    <td class="col-xs-1 col-md-1">ROLES</td>
                    <td class="col-xs-1 col-md-1">DROITS</td>
                </tr>
                <tr class="row0">
                    <td class="col-xs-1 col-md-1">{{ form_widget(form.username) }}</td>
                    <td class="col-xs-2 col-md-2">{% for role in form.roles %}{{ form_label(role) }}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ form_widget(role) }}<br>{% endfor %}</td>
                    <td class="col-xs-1 col-md-1">{{ form_widget(form.rights) }}</td>
                </tr>
            </table>
            {{ form_widget(form) }}
            <button type="submit" value="valider" name="valider" class="btn btn-primary">Valider</button>
        </div>
    </div>
</div>