{% extends 'CibCoreBundle::layout.html.twig' %}


{% block body %}
    {#<div class="count">#}
        {#{{ pagination.getTotalItemCount }}#}
    {#</div>#}
    <div class="row">
        <div class="container">
            <div class="pagination">
                <a href="{{ path('index') }}"> Acceuil</a> > Clients
            </div>
        </div>
    </div>
    {% include 'CibCoreBundle:Core:displayFlash.html.twig' %}

    <div class="row" style="margin-top: 5%">
        <div class="container">
            <div class="col-xs-offset-4 col-xs-6">
                <form action="{{ path('displayClient',{'page' : 1}) }}" method="post">
                    <input type="text" name="txtSearch" placeholder="entrer le nom ou prénom recherché"/>
                    <button type="submit" name="search" value="search">Rechercher</button>
                </form>
            </div>
        </div>
    </div>
    {% if pagination %}
        <div class="row" style="margin-top: 5%">
            <div class="container">
                <div class="col-xs-offset-3 col-xs-6">
                    <form action="{{ path('deleteClient') }}" method="post">
                        <table class="table table-bordered table-responsive">
                            <thead>
                            <tr>
                                <th></th>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>
                            {% for client in pagination.items %}
                                <tbody>
                                <tr>
                                    <td><input class="check" type="checkbox" name="multiDelete[]" value="{{ client.clientId }}"></td>
                                    <td>{{ client.clientName }}</td>
                                    <td>{{ client.clientFirstName }}</td>
                                    <td><a href="{{ path('editClient',{'id':client.clientId}) }}" class="glyphicon glyphicon-edit" style="color:darkorange"></a></td>
                                    <td><a href="{{ path('deleteClient',{'id':client.clientId,'token':client.token}) }}" class="glyphicon glyphicon-remove" style="color:orangered"></a></td>
                                </tr>
                                </tbody>
                            {% endfor %}
                        </table>
                        <button type="submit" name="delete" value="delete" class="btn btn-link glyphicon glyphicon-remove">supprimer<span style="font-style: italic"> (la séléction)</span></button>
                        <a href="{{ path('addClient') }}" class="btn btn-link glyphicon glyphicon-floppy-save">Ajouter client</a>
                    </form>
                </div>
            </div>
        </div>

    {% else %}
        Aucun client à afficher
    {% endif %}
    <div class="row">
        <div class="container">
            <div class="col-xs-offset-3 col-xs-6">
                <center>
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </center>
            </div>
        </div>
    </div>


{% endblock body %}