{% extends 'CibCoreBundle::layout.html.twig' %}


{% block body %}

    <div class="row">
        <div class="container">
            <div class="pagination">
                <a href="{{ path('index') }}"> Acceuil</a> > Cartes
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-xs-offset-2 col-md-offset-2" style="padding-left: 2%">
                <h1>Détails de la carte {{ card.cardNumber }}</h1>
            </div>
        </div>
    </div>


    {% for parameter in param %}
        <div class="container">
            <div class="row">
                <div class="col-xs-offset-2 col-md-offset-2 col-xs-6 col-md-6">
                    <table class="table table-responsive">
                        <thead>
                        <tr class="titleTableLarge">
                            <th colspan="2">DETENTEUR</th>
                        </tr>
                        <tr class="titleTable">
                            <th>NOM</th>
                            <th>PRENOM</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if card.client is not null %}
                            <tr class="rowLink0">
                                <td><a href="{{ path('editClient',{'id' : card.client.clientId}) }}">{{ card.client.clientName }}</a></td>
                                <td><a href="{{ path('editClient',{'id' : card.client.clientId}) }}">{{ card.client.clientFirstName }}</a></td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="2" class="alert-danger">Aucun client associé</td>
                            </tr>
                        {% endif %}
                        </tbody>
                    </table>

                    <table class="table table-responsive">
                        <thead>
                        <tr class="titleTableLarge">
                            <th colspan="3">SOLDES PORTE-MONNAIES</th>
                        </tr>
                        <tr class="titleTable">
                            <th>NUM PME</th>
                            <th>SOLDE MONTANT</th>
                            <th>SOLDE UNITE</th>
                        </tr>
                        </thead>
                        <tbody>
                        {#{% if parameter.Pme1 %}#}
                        <tr class="row0 rowPme">
                            <td>PME1</td>
                            <td>{{ card.moneyAmount1|number_format(2, ',',' ') }} €</td>
                            <td>{{ card.unitAmount1|number_format(0, ',',' ') }}</td>
                        </tr>
                        {#{% endif %}#}
                        {#{% if parameter.Pme2 %}#}
                        <tr class="row1 rowPme">
                            <td>PME2</td>
                            <td>{{ card.moneyAmount2|number_format(2, ',',' ') }} €</td>
                            <td>{{ card.unitAmount2|number_format(0, ',',' ') }}</td>
                        </tr>
                        {#{% endif %}#}
                        {#{% if parameter.Pme3 %}#}
                        <tr class="row0 rowPme">
                            <td>PME3</td>
                            <td>{{ card.moneyAmount3|number_format(2, ',',' ') }} €</td>
                            <td>{{ card.unitAmount3|number_format(0, ',',' ') }}</td>
                        </tr>
                        {#{% endif %}#}
                        {#{% if parameter.Pme4 %}#}
                        <tr class="row1 rowPme">
                            <td>PME4</td>
                            <td>{{ card.moneyAmount4|number_format(2, ',',' ') }} €</td>
                            <td>{{ card.unitAmount4|number_format(0, ',',' ') }}</td>
                        </tr>
                        {#{% endif %}#}
                        {#{% if parameter.Pme5 %}#}
                        <tr class="row0 rowPme">
                            <td>PME5</td>
                            <td>{{ card.moneyAmount5|number_format(2, ',',' ') }} €</td>
                            <td>{{ card.unitAmount5|number_format(0, ',',' ') }}</td>
                        </tr>
                        {#{% endif %}#}
                        </tbody>
                    </table>
                    <table class="table table-responsive">
                        <thead>
                        <th colspan="2" class="titleTableLarge">INFOS SUPPLEMENTAIRES</th>
                        </thead>
                        <tbody>
                        <tr class="row0">
                            <td>date de validité</td>
                            <td>{{ card.cardValidity|date('d/m/Y', "Europe/Paris") }}</td>
                        </tr>
                        {#{% if card.signboard is not null %}#}
                        {#<tr>#}
                        {#<td>enseigne</td>#}
                        {#<td>{{ card.signboard.signboardName }}</td>#}
                        {#</tr>#}
                        {#{% endif %}#}
                        <tr class="row1">
                            <td>active</td>
                            <td><input type="checkbox" {% if card.isActive %} checked {% endif %} disabled></td>
                        </tr>
                        </tbody>
                    </table>
            {% endfor %}
                </div>
            </div>
        </div>



{% endblock body %}