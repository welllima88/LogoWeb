{% extends 'CibCoreBundle::layout.html.twig' %}


{% block body %}

    <div class="row">
        <div class="container">
            <div class="pagination">
                <a href="{{ path('index') }}"> Accueil</a> > Compensation
            </div>
        </div>
    </div>

    {% include 'CibCoreBundle:Core:displayFlash.html.twig' %}

    <div class="container">
        <div class="row">
            <div class="col-xs-offset-3 col-md-offset-3 col-xs-5 col-md-5">
                <table class="table table-responsive">
                    <tr class="titleTable">
                        <td>DATE CLOTURE</td>
                        <td>MAGASIN(S)</td>
                    </tr>
                    <tr>
                        <td>{{ form_widget(form.dateStopEnclose) }}</td>
                        <td>{{ form_widget(form.store) }}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    {{ form_widget(form) }}

    <div class="container">
        <div class="row">
            <div class="col-xs-offset-1 col-md-offset-1">
                <div id="tableEnclose" class="{{ path('displayCompensation') }}">

                </div>
                <div id="tableTotal">

                </div>
                <div id="dialog" title="Confirmation" hidden="hidden">
                    Etes-vous sur de vouloir cloturer ?
                </div>
                <div id="dialogFail" title="Echec" hidden="hidden">
                    Rien a cloturer
                </div>
                <div id="displayModal">

                </div>
                <div id="linkExport" class="{{ path('exportEncloseResults') }}">

                </div>
            </div>
        </div>
    </div>


{% endblock body %}